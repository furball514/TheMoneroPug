{
  "manifest_version": 2,
  "name": "TheMoneroPug",
  "short_name":"MoneroPug",
  "author": "Karthik",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "description": "A Chrome extension for viewing Monero market details. Made for traders.",
  "icons": {"128":"main/128.png"},
  "browser_action": {
    "default_icon": {
      "16": "main/16.png",
      "48": "main/48.png"
    },
    "default_title": "TheMoneroPug",
    "default_popup": "main/popup.html"
  },
  "options_ui": {
    "page": "setting/options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "main/jquery-3.2.0.min.js",
      "main/popup.js",
      "more/more.js",
      "setting/options.js",
      "charts/charts.js",
      "charts/amcharts.js",
      "charts/serial.js"
    ]
  },
  "permissions": [
    "storage"
  ],
  "chrome_url_overrides" : {
    "newtab": "/charts/charts.html"
  }
}
